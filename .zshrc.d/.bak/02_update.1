
_soft_cabal_target=$(ls -l ~/.cabal | awk '{print $11}')
if [[ "${_soft_cabal_target}" == "/var/root/.cabal.macports" ]]; then
    print "Selecting GHC version $(bold 6.10.4 \(macports\)) for this session.\n";
    # export PATH=/opt/local/bin:$PATH
elif [[ "${_soft_cabal_target}" == "/var/root/.cabal.system" ]]; then
    print "Selecting GHC version $(bold 6.12.1 \(system\)) for this session.\n";
    # export PATH=/usr/local/bin:/usr/bin:$PATH
else
    print "$(bold Error selecting GHC version.)  Symbolic link ~/.cabal not recognized.\n";
fi

