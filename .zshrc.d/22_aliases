#!/usr/bin/env zsh
# encoding: utf-8
# 
# 22_aliases

alias elinks=/usr/local/bin/elinks
alias ash="VERSIONER_PERL_PREFER_32_BIT=yes /usr/local/bin/ash.pl"
alias ldapsearch=/opt/local/bin/ldapsearch
alias install=/opt/local/bin/ginstall
alias ls="/opt/local/bin/gls -a --color=auto"
alias lsd='/opt/local/bin/gls -ld *(-/DN)'
alias updatedb=/usr/libexec/locate.updatedb
alias sshfs=/Users/rosenbergdm/sshfs-static-leopard
alias less='less -X -M'
# alias vim=/usr/local/bin/vim
alias vim=/opt/local/bin/vin
# alias ghci="ghci 2>&1 | HsColour -tty"
alias ctags=/usr/local/bin/ctags
alias etags=/usr/local/bin/etags
alias CocoaDialog=/Applications/MacPorts/CocoaDialog.app/Contents/MacOS/CocoaDialog
# Global aliases -- These do not have to be
alias -g L='less'
# alias -g M='more'
alias -g H='head'
alias -g T='tail'
alias -g Tn='tail -n'
alias -g Hn='head -n'
alias mutt='/usr/local/bin/mutt'
# alias gcabal="$(which cabal) install --with-haddock=$(which haddock) --haddock-option=--hoogle --haddockdir=/usr/doc/haddock --docdir=/usr/doc --htmldir=/usr/doc/html --enable-documentation --with-hscolour=$(which HsColour) --verbose=2"
    unalias vim
    alias vim=/opt/local/bin/vim\ -X
alias eec=$EEAOUT



alias elinks=/usr/local/bin/elinks

alias ash="VERSIONER_PERL_PREFER_32_BIT=yes /usr/local/bin/ash.pl"
alias ldapsearch=/opt/local/bin/ldapsearch
alias install=/opt/local/bin/ginstall
alias ls="/opt/local/bin/gls -a --color=auto"
alias lsd='/opt/local/bin/gls -ld *(-/DN)'
alias updatedb=/usr/libexec/locate.updatedb
alias sshfs=/Users/rosenbergdm/sshfs-static-leopard
alias less='less -X -M'
alias vim=/opt/local/bin/vim
# alias ghci="ghci 2>&1 | HsColour -tty"
alias ctags=/usr/local/bin/ctags
alias etags=/usr/local/bin/etags
CBOPTS="--haddock-option=--hoogle --haddockdir=/usr/doc/haddock --docdir=/usr/doc --htmldir=/usr/doc/html --enable-documentation --with-hscolour=/usr/local/bin/HsColour --verbose=2"
alias CocoaDialog=/Applications/MacPorts/CocoaDialog.app/Contents/MacOS/CocoaDialog

# Global aliases -- These do not have to be
# at the beginning of the command line.
alias -g L='less'
# alias -g M='more'
alias -g H='head'
alias -g T='tail'
alias -g Tn='tail -n'
alias -g Hn='head -n'
alias mutt='/usr/local/bin/mutt'
